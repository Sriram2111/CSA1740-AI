import itertools

# Define cities and distances
cities = [0, 1, 2, 3]
distances = [
    [0, 10, 15, 20],
    [10, 0, 35, 25],
    [15, 35, 0, 30],
    [20, 25, 30, 0]
]

# Initialize variables to store the shortest path and its distance
shortest_path = None
min_distance = float('inf')

# Generate all permutations of the cities
for p in itertools.permutations(cities):
    # Calculate the total distance for the current path
    current_distance = 0
    for i in range(len(p) - 1):
        current_distance += distances[p[i]][p[i + 1]]
    # Add the distance to return to the starting city
    current_distance += distances[p[-1]][p[0]]
    
    # Update the shortest path if the current distance is smaller
    if current_distance < min_distance:
        min_distance = current_distance
        shortest_path = p

# Print the result
print("Shortest path:", shortest_path)
print("Minimum distance:", min_distance)
